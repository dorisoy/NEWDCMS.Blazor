@page "/categories"
@inject Microsoft.Extensions.Localization.IStringLocalizer<Categories> _localizer

@if (!_loaded)
{
    <Spinner></Spinner>
}
else
{
<MudPaper Elevation="3" Height="150" Class="px-4 mx-n4 mt-n10 pt-10 mud-theme-primary" Style="border-radius: 0px 0px 45px 45px;" Outlined="false">
    <MudPaper Elevation="0" Class="py-6" Style="background-color: transparent">

    </MudPaper>
</MudPaper>

<MudGrid Class="mt-n15 pt-0 mb-1">
    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row rounded-xl" Style="height:130px;">
            <MudIconButton Icon="@Icons.Material.TwoTone.PhoneIphone" Color="Color.Info" Class="ma-3 pa-3" Size="Size.Large"></MudIconButton>
            <MudPaper Elevation="0" Class="pa-0 align-self-center">
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Color="@Color.Default">Mobile Devices</MudText>
                <MudText Typo="Typo.caption" Style="font-weight: 300;" Color="@Color.Info" Class="mud-text-secondary">Best seller category </MudText>
            </MudPaper>
            <MudPaper Elevation="0" Class="pa-0 mr-2 ml-auto align-self-center">
                <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="px-2 align-self-center" Size="Size.Medium"></MudIcon>
            </MudPaper>
        </MudCard>
    </MudItem>
</MudGrid>

<MudGrid Class="mb-5" Spacing="2">
    <MudItem xs="6" sm="6" md="6">
        <MudCard Elevation="25" Class="rounded-xl" >
            <MudCardContent Class="d-flex flex-column px-3 py-2" Style="height:130px;">
                <MudIconButton Icon="@Icons.Material.TwoTone.Laptop" Color="Color.Secondary" Class="pa-3 align-self-center" Size="Size.Large"></MudIconButton>
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Surface">Laptop</MudText>
                <MudText Typo="Typo.caption" Style="font-weight: 300;" Class="mt-auto align-self-center mud-text-secondary" Color="@Color.Default">Tap to view </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="6" sm="6" md="6">
        <MudCard Elevation="25" Class="rounded-xl">
            <MudCardContent Class="d-flex flex-column px-3 py-2" Style="height:130px;">
                <MudIconButton Icon="@Icons.Material.TwoTone.DesktopMac" Color="Color.Primary" Class="pa-3 align-self-center" Size="Size.Large"></MudIconButton>
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Surface">Desktops</MudText>
                <MudText Typo="Typo.caption" Style="font-weight: 300;" Class="mt-auto align-self-center mud-text-secondary" Color="@Color.Default">Tap to view </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="6" sm="6" md="6">
        <MudCard Elevation="25" Class=" rounded-xl" >
            <MudCardContent Class="d-flex flex-column align-self-center flex-wrap px-3 py-2" Style="height:130px;">
                <MudIconButton Icon="@Icons.Material.TwoTone.Tablet" Color="Color.Warning" Class="pa-3 align-self-center" Size="Size.Large"></MudIconButton>
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Surface">Tablets</MudText>
                <MudText Typo="Typo.caption" Style="font-weight: 300;" Class="mt-auto align-self-center mud-text-secondary" Color="@Color.Default">Tap to view </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="6" sm="6" md="6">
        <MudCard Elevation="25" Class="rounded-xl">
            <MudCardContent Class="d-flex flex-column align-self-center flex-wrap px-3 py-2" Style="height:130px;">
                <MudIconButton Icon="@Icons.Material.TwoTone.DesktopMac" Color="Color.Error" Class="pa-3 align-self-center" Size="Size.Large"></MudIconButton>
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Surface">Smart TV</MudText>
                <MudText Typo="Typo.caption" Style="font-weight: 300;" Class="mt-auto align-self-center mud-text-secondary" Color="@Color.Default">Tap to view </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="4" sm="4" md="4">
        <MudCard Elevation="25" Class="rounded-xl" >
            <MudCardContent Class="d-flex flex-column px-3 py-2" Style="height:130px;">
                <MudIconButton Icon="@Icons.Material.TwoTone.CreditCard" Color="Color.Primary" Class="pa-3 align-self-center" Size="Size.Large"></MudIconButton>
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Surface">Cards</MudText>
                <MudText Typo="Typo.caption" Style="font-weight: 300;" Class="mt-auto align-self-center mud-text-secondary" Color="@Color.Default">Tap to view </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="4" sm="4" md="4">
        <MudCard Elevation="25" Class=" rounded-xl" >
            <MudCardContent Class="d-flex flex-column align-self-center flex-wrap px-3 py-2" Style="height:130px;">
                <MudIconButton Icon="@Icons.Material.TwoTone.Settings" Color="Color.Warning" Class="pa-3 align-self-center" Size="Size.Large"></MudIconButton>
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Surface">Services</MudText>
                <MudText Typo="Typo.caption" Style="font-weight: 300;" Class="mt-auto align-self-center mud-text-secondary" Color="@Color.Default">Tap to view </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="4" sm="4" md="4">
        <MudCard Elevation="25" Class="rounded-xl" >
            <MudCardContent Class="d-flex flex-column align-self-center flex-wrap px-3 py-2" Style="height:130px;">
                <MudIconButton Icon="@Icons.Material.TwoTone.Usb" Color="Color.Error" Class="pa-3 align-self-center" Size="Size.Large"></MudIconButton>
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Surface">Storage</MudText>
                <MudText Typo="Typo.caption" Style="font-weight: 300;" Class="mt-auto align-self-center mud-text-secondary" Color="@Color.Default">Tap to view </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>
}