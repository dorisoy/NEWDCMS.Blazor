@page "/invoices"
@inject Microsoft.Extensions.Localization.IStringLocalizer<Invoices> _localizer
@inject IDialogService DialogService

<MudPaper Elevation="3" Height="150" Class="px-4 mx-n4 mt-n10 py-10 mud-theme-primary" Style="border-radius: 0px 0px 45px 45px;" Outlined="false">
    <MudPaper Elevation="0" Class="py-0">
        <MudBreadcrumbs Class="py-1" Items="_routes" Separator=">"> </MudBreadcrumbs>
    </MudPaper>
</MudPaper>

<MudCard Elevation="25" Class="mt-n7 rounded-xl">
    <MudCardContent>
        <MudGrid Class="mb-3">
            <MudItem xs="12">
                <MudText Typo="Typo.subtitle1" Style="font-weight: 600;" Color="Color.Primary">Processed Orders</MudText>
                <MudText Typo="Typo.caption">Invoices that have been paid and are available for you to download for your own records. </MudText>
            </MudItem>

            <MudItem xs="12">
                <MudDivider></MudDivider>
            </MudItem>

            <MudItem xs="12" sm="12" md="12">
                <MudPaper Elevation="0" Class="d-flex pa-0" @onclick="@(() => NavigateToOrderDetail())">
                    <MudChip Class="px-2 ml-0 mr-2 align-self-center" Color="Color.Warning" Size="Size.Small">#0001</MudChip>
                    <MudPaper Elevation="0" Class="pa-0 mr-2 align-self-center">
                        <MudText Typo="Typo.subtitle1" Class="mb-n1" Style="font-weight: 600;" Color="@Color.Primary">Karla Black</MudText>
                        <MudText Typo="Typo.body2" Color="@Color.Default">13rd Jun 2021</MudText>
                    </MudPaper>
                    <MudPaper Elevation="0" Class="pa-0 mr-0 ml-auto align-self-center">
                        <MudText Typo="Typo.h6" Class="mb-n1" Align="Align.Right" Style="font-weight: 600;" Color="@Color.Default">$4,129</MudText>
                        <MudText Typo="Typo.body2" Align="Align.Right" Style="font-weight: 500;" Color="@Color.Warning">Pending Payment</MudText>
                    </MudPaper>
                </MudPaper>
            </MudItem>

            <MudItem xs="12">
                <MudDivider></MudDivider>
            </MudItem>

            <MudItem xs="12" sm="12" md="12">
                <MudPaper Elevation="0" Class="d-flex pa-0" @onclick="@(() => NavigateToOrderDetail())">
                    <MudChip Class="px-2 ml-0 mr-2 align-self-center" Color="Color.Warning" Size="Size.Small">#0002</MudChip>
                    <MudPaper Elevation="0" Class="pa-0 mr-2 align-self-center">
                        <MudText Typo="Typo.subtitle1" Class="mb-n1" Style="font-weight: 500;" Color="@Color.Primary">Karla Black</MudText>
                        <MudText Typo="Typo.body2" Color="@Color.Default">18th Aug 2021</MudText>
                    </MudPaper>
                    <MudPaper Elevation="0" Class="pa-0 mr-0 ml-auto align-self-center">
                        <MudText Typo="Typo.h6" Class="mb-n1" Align="Align.Right" Style="font-weight: 600;" Color="@Color.Default">$1,120</MudText>
                        <MudText Typo="Typo.body2" Align="Align.Right" Style="font-weight: 500;" Color="@Color.Warning">Pending Payment</MudText>
                    </MudPaper>
                </MudPaper>
            </MudItem>

            <MudItem xs="12">
                <MudDivider></MudDivider>
            </MudItem>

            <MudItem xs="12" sm="12" md="12">
                <MudPaper Elevation="0" Class="d-flex pa-0" @onclick="@(() => NavigateToOrderDetail())">
                    <MudChip Class="px-2 ml-0 mr-2 align-self-center" Color="Color.Warning" Size="Size.Small">#0003</MudChip>
                    <MudPaper Elevation="0" Class="pa-0 mr-2 align-self-center">
                        <MudText Typo="Typo.subtitle1" Class="mb-n1" Style="font-weight: 500;" Color="@Color.Primary">Karla Black</MudText>
                        <MudText Typo="Typo.body2" Color="@Color.Default">19th Sep 2021</MudText>
                    </MudPaper>
                    <MudPaper Elevation="0" Class="pa-0 mr-0 ml-auto align-self-center">
                        <MudText Typo="Typo.h6" Class="mb-n1" Align="Align.Right" Style="font-weight: 600;" Color="@Color.Default">$2,559.5</MudText>
                        <MudText Typo="Typo.body2" Align="Align.Right" Style="font-weight: 500;" Color="@Color.Warning">Pending Payment</MudText>
                    </MudPaper>
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>

<MudCard Elevation="25" Class="rounded-xl mt-5">
    <MudCardContent>
        <MudGrid Class="mb-3">
            <MudItem xs="12">
                <MudText Typo="Typo.subtitle1" Style="font-weight: 600;" Color="Color.Primary">Completed & Shipped</MudText>
                <MudText Typo="Typo.caption">Payments that have failed to process. Please contact support for more information </MudText>
            </MudItem>

            <MudItem xs="12">
                <MudDivider></MudDivider>
            </MudItem>

            <MudItem xs="12" sm="12" md="12">
                <MudPaper Elevation="0" Class="d-flex pa-0" @onclick="@(() => NavigateToOrderDetail())">
                    <MudChip Class="px-2 ml-0 mr-2 align-self-center" Style="@($"color:{Colors.Shades.White}; background:{Theme.Palette.SuccessLighten};")" Size="Size.Small">#0005</MudChip>
                    <MudPaper Elevation="0" Class="pa-0 mr-2 align-self-center">
                        <MudText Typo="Typo.subtitle1" Class="mb-n1" Style="font-weight: 500;" Color="@Color.Primary">Karla Black</MudText>
                        <MudText Typo="Typo.body2" Color="@Color.Default">13rd Jun 2021</MudText>
                    </MudPaper>
                    <MudPaper Elevation="0" Class="pa-0 mr-0 ml-auto align-self-center">
                        <MudText Typo="Typo.h6" Class="mb-n1" Align="Align.Right" Style="font-weight: 600;" Color="@Color.Default">$4,129</MudText>
                        <MudText Typo="Typo.body2" Align="Align.Right" Style="@($"color:{Theme.Palette.SuccessLighten}; font-weight: 500;")">Full Paid</MudText>
                    </MudPaper>
                </MudPaper>
            </MudItem>

            <MudItem xs="12">
                <MudDivider></MudDivider>
            </MudItem>

            <MudItem xs="12" sm="12" md="12">
                <MudPaper Elevation="0" Class="d-flex pa-0" @onclick="@(() => NavigateToOrderDetail())">
                    <MudChip Class="px-2 ml-0 mr-2 align-self-center" Style="@($"color:{Colors.Shades.White}; background:{Theme.Palette.SuccessLighten};")" Size="Size.Small">#0006</MudChip>
                    <MudPaper Elevation="0" Class="pa-0 mr-2 align-self-center">
                        <MudText Typo="Typo.subtitle1" Class="mb-n1" Style="font-weight: 500;" Color="@Color.Primary">Karla Black</MudText>
                        <MudText Typo="Typo.body2" Color="@Color.Default">18th Aug 2021</MudText>
                    </MudPaper>
                    <MudPaper Elevation="0" Class="pa-0 mr-0 ml-auto align-self-center">
                        <MudText Typo="Typo.h6" Class="mb-n1" Align="Align.Right" Style="font-weight: 600;" Color="@Color.Default">$2,220</MudText>
                        <MudText Typo="Typo.body2" Align="Align.Right" Style="@($"color:{Theme.Palette.SuccessLighten}; font-weight: 500;")">Full Paid</MudText>
                    </MudPaper>
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>

<MudCard Elevation="25" Class="rounded-xl mt-5">
    <MudCardContent>
        <MudGrid Class="mb-1">
            <MudItem xs="12">
                <MudText Typo="Typo.subtitle1" Style="font-weight: 600;">Rejected Payments</MudText>
                <MudText Typo="Typo.caption">Payments that have failed to process. Please contact support for more information </MudText>
            </MudItem>

            <MudItem xs="12">
                <MudDivider></MudDivider>
            </MudItem>

            <MudItem xs="12" sm="12" md="12">
                <MudPaper Elevation="0" Class="d-flex pa-0" @onclick="@(() => NavigateToOrderDetail())">
                    <MudChip Class="px-2 ml-0 mr-2 align-self-center" Color="Color.Error" Size="Size.Small">#0004</MudChip>
                    <MudPaper Elevation="0" Class="pa-0 mr-2 align-self-center">
                        <MudText Typo="Typo.subtitle1" Class="mb-n1" Style="font-weight: 500;" Color="@Color.Primary">Karla Black</MudText>
                        <MudText Typo="Typo.body2" Color="@Color.Default">13rd Jun 2021</MudText>
                    </MudPaper>
                    <MudPaper Elevation="0" Class="pa-0 mr-0 ml-auto align-self-center">
                        <MudText Typo="Typo.h6" Class="mb-n1" Align="Align.Right" Style="font-weight: 600;" Color="@Color.Default">$4,129</MudText>
                        <MudText Typo="Typo.body2" Align="Align.Right" Style="font-weight: 500;" Color="@Color.Error">Rejected</MudText>
                    </MudPaper>
                </MudPaper>
            </MudItem>

            <MudItem xs="12">
                <MudDivider Class="mb-1"></MudDivider>
            </MudItem>

            <MudItem xs="12">
                <MudContainer Fixed="true" Class="px-0">
                    <MudButton FullWidth="true" Class="rounded-xl" Variant="Variant.Filled" Color="Color.Info">Call Support </MudButton>
                </MudContainer>
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>