@page "/productdetail"
@inject Microsoft.Extensions.Localization.IStringLocalizer<ProductDetail> _localizer
@inject IDialogService DialogService

<MudPaper Elevation="3" Height="150" Class="px-4 mx-n4 mt-n10 py-10 mud-theme-primary" Style="border-radius: 0px 0px 45px 45px;" Outlined="false">
    <MudPaper Elevation="0" Class="py-0">
        <MudBreadcrumbs Class="py-1" Items="_items" Separator=">"> </MudBreadcrumbs>
    </MudPaper>
</MudPaper>

<MudCard Elevation="25" Class="mt-n7 rounded-xl">
    <MudCardMedia Image="/images/pictures/28.jpg" Height="200" />
    <MudCardContent>
        <MudGrid>
            <MudItem xs="6">
                <MudText Typo="Typo.h6" Style="font-weight: 600;">Old Paint</MudText>
                <MudText Typo="Typo.body2">Old paint found on a stone house door.</MudText>
                <MudText Typo="Typo.body2">This photo was taken in a small village in Istra Croatia.</MudText>
            </MudItem>
            <MudItem xs="6">
                <MudText Typo="Typo.h6" Style="font-weight: 600; text-align: right;" Color="@Color.Error">$23.99</MudText>
                <MudText Typo="Typo.body2">Brand</MudText>
                <MudText Typo="Typo.subtitle1" Color="@Color.Primary">Blazor</MudText>
                <MudText Typo="Typo.body2">Product Type</MudText>
                <MudText Typo="Typo.subtitle1" Color="@Color.Primary">Digital Gadgets</MudText>
            </MudItem>

            <MudItem xs="12">
                <MudDivider></MudDivider>
            </MudItem>

            <MudItem xs="12" Class="d-flex align-content-center">
                <MudPaper Elevation="0" Class="ml-0 mr-auto">
                    <MudText Typo="Typo.body1">Ratings &amp; Reviews</MudText>
                    <MudRating ReadOnly="true" SelectedValue="4" />
                </MudPaper>
                <MudPaper Elevation="0" Class="mx-1">
                    <MudIconButton Icon="@Icons.Material.Filled.Favorite" Variant="Variant.Filled" Color="Color.Error" Size="Size.Small" Class="ma-1" />
                    <MudIconButton Icon="@Icons.Material.Filled.Share" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small" Class="ma-1" />
                </MudPaper>
            </MudItem>

            <MudItem xs="12">
                <MudDivider></MudDivider>
            </MudItem>

            <MudItem xs="12">
                <MudContainer Fixed="true" Class="px-0">
                    <MudButton FullWidth="true" Class="rounded-xl" Variant="Variant.Filled" Color="Color.Primary" @onclick="@(() => NavigateToCartDetail())">Add To Cart</MudButton>
                </MudContainer>
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>

<MudCard Elevation="25" Class="rounded-xl mt-5">
    <MudCardContent>
        <MudText Typo="Typo.subtitle1" Style="font-weight: 600;">Product Overview</MudText>
        <MudText Typo="Typo.caption">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla sed dolor lacus. Ut cursus ipsum ut nibh accumsan viverra.</MudText>
        <MudDivider Class="my-3"></MudDivider>
        <MudGrid>
            <MudItem xs="4">
                <MudText Typo="Typo.subtitle1" Color="@Color.Primary">PWA</MudText>
            </MudItem>
            <MudItem xs="8">
                <MudText Typo="Typo.body2">Ready to be used out of the box.</MudText>
            </MudItem>
            <MudItem xs="4">
                <MudText Typo="Typo.subtitle1" Color="@Color.Primary">Platform</MudText>
            </MudItem>
            <MudItem xs="8">
                <MudText Typo="Typo.body2">Bootstrap 4.x always updated to latest version.</MudText>
            </MudItem>
            <MudItem xs="4">
                <MudText Typo="Typo.subtitle1" Color="@Color.Primary">Hybrid App</MudText>
            </MudItem>
            <MudItem xs="8">
                <MudText Typo="Typo.body2">Compatible with Xamarin or .NET MAUI and others.</MudText>
            </MudItem>
        </MudGrid>

        <MudDivider Class="mt-5 mb-5" />

        <MudText Typo="Typo.subtitle1" Style="font-weight: 600;">Technical Grid</MudText>
        <MudText Typo="Typo.caption">A classic list of specifications that are necessary for products that give minor and major listed details.</MudText>
        <MudGrid Class="my-5">
            <MudItem xs="4">
                <MudText Typo="Typo.subtitle1" Color="@Color.Primary">PWA</MudText>
                <MudText Typo="Typo.body2">Compatible</MudText>
            </MudItem>
            <MudItem xs="4">
                <MudText Typo="Typo.subtitle1" Color="@Color.Primary">Platform</MudText>
                <MudText Typo="Typo.body2">MudBlazor</MudText>
            </MudItem>
            <MudItem xs="4">
                <MudText Typo="Typo.subtitle1" Color="@Color.Primary">Support</MudText>
                <MudText Typo="Typo.body2">Included</MudText>
            </MudItem>
            <MudItem xs="6">
                <MudText Typo="Typo.subtitle1" Color="@Color.Primary">Hybrid App</MudText>
                <MudText Typo="Typo.body2">Xamarin or .NET MAUI</MudText>
            </MudItem>
            <MudItem xs="6">
                <MudText Typo="Typo.subtitle1" Color="@Color.Primary">Update</MudText>
                <MudText Typo="Typo.body2">Constant Releases</MudText>
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>

