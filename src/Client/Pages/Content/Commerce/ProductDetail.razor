            </MudItem>
            <MudItem lg="6" md="6" xs="6" xl="6" Class="pl-1">
                <MudButton FullWidth="true" Class="rounded-xl px-1" Size="Size.Medium" Variant="Variant.Filled" Color="Color.Primary" @onclick="@(() => NavigateToCartDetail())">Add To Cart</MudButton>
