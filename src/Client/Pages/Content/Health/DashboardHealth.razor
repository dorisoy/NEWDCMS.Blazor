                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Secondary">I</MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.body1">Dr. Istra</MudText>
                    <MudText Typo="Typo.body2">Peninsula in Europe</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@Icons.Material.TwoTone.Favorite" Color="Color.Default" />
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardMedia Image="/images/pictures/2.jpg" Height="130" />
            <MudCardContent Style="width: 300px;">
                <MudText Typo="Typo.subtitle1" Color="@Color.Primary">Progressive Web App</MudText>
            </MudCardContent>
        </MudCard>

        <MudCard Elevation="25" Class="mr-3 rounded-lg py-0">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Error">S</MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.body1">Istra Croatia</MudText>
                    <MudText Typo="Typo.body2">Peninsula in Europe</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@Icons.Material.TwoTone.Favorite" Color="Color.Default" />
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardMedia Image="/images/pictures/3.jpg" Height="130" />
            <MudCardContent Style="width: 300px;">
                <MudText Typo="Typo.subtitle1" Color="@Color.Primary">Blazor Hero App</MudText>
            </MudCardContent>
        </MudCard>

        <MudCard Elevation="25" Class="mr-3 rounded-lg py-0">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Warning">D</MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.body1">Istra Croatia</MudText>
                    <MudText Typo="Typo.body2">Peninsula in Europe</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@Icons.Material.TwoTone.Favorite" Color="Color.Default" />
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardMedia Image="/images/pictures/4.jpg" Height="130" />
            <MudCardContent Style="width: 300px;">
                <MudText Typo="Typo.subtitle1" Color="@Color.Primary">DCMS.Blazor App</MudText>
            </MudCardContent>
        </MudCard>

        <MudCard Elevation="25" Class="mr-3 rounded-lg py-0">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Success">J</MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.body1">Istra Croatia</MudText>
                    <MudText Typo="Typo.body2">Peninsula in Europe</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@Icons.Material.TwoTone.Favorite" Color="Color.Default" />
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardMedia Image="/images/pictures/5.jpg" Height="130" />
            <MudCardContent Style="width: 300px;">
                <MudText Typo="Typo.subtitle1" Color="@Color.Primary">PWA Ready Kit</MudText>
            </MudCardContent>
        </MudCard>

        <MudCard Elevation="25" Class="mr-3 rounded-lg py-0">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Secondary">I</MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.body1">Istra Croatia</MudText>
                    <MudText Typo="Typo.body2">Peninsula in Europe</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@Icons.Material.TwoTone.Favorite" Color="Color.Default" />
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardMedia Image="/images/pictures/6.jpg" Height="130" />
            <MudCardContent Style="width: 300px;">
                <MudText Typo="Typo.subtitle1" Color="@Color.Primary">MAUI and Xamarin</MudText>
            </MudCardContent>
        </MudCard>
    </MudPaper>
</MudPaper>
