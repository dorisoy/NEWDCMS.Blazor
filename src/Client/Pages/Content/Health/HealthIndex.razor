@page "/health"
@inject Microsoft.Extensions.Localization.IStringLocalizer<HealthIndex> _localizer

@if (!_loaded)
{
    <Spinner></Spinner>
}
else
{
<MudPaper Elevation="3" Height="150" Class="px-4 mx-n4 mt-n10 pt-10 mud-theme-primary" Style="border-radius: 0px 0px 35px 35px;" Outlined="false">
    <MudPaper Elevation="0" Class="py-6" Style="background-color: transparent">

    </MudPaper>
</MudPaper>

<MudGrid Class="mt-n15 pt-0 mb-1">
    <MudItem xs="12">
        <MudCard Elevation="25" Class="rounded-lg">
            <MudCardContent>
                <MudText Color="Color.Default" Align="Align.Left" Typo="Typo.body2" Style="font-weight: 400;">Prebuilt Medical, Health pages for your Web or Mobile apps.</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

<MudGrid Class="mb-5" Spacing="2">
    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row rounded-lg" @onclick="@(() => NavigateToHealthDashboard())">
            <MudIcon Icon="fas fa-heartbeat" Color="Color.Secondary" Class="mx-3 my-5 align-self-center" Size="Size.Large" ></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Homepage </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row rounded-lg"  @onclick="@(() => NavigateToMedicalForm())">
            <MudIcon Icon="fas fa-file-medical-alt" Color="Color.Info" Class="mx-3 my-5 align-self-center" Size="Size.Large" ></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Medical Form </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row rounded-lg" @onclick="@(() => NavigateToVaccineCertificate())">
            <MudIcon Icon="fas fa-shield-virus" Color="Color.Tertiary" Class="mx-3 my-5 align-self-center" Size="Size.Large" ></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Vaccination Certificate </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row rounded-lg" @onclick="@(() => NavigateToVaccineCertificateDetails())">
            <MudIcon Icon="fas fa-pills" Color="Color.Primary" Class="mx-3 my-5 align-self-center" Size="Size.Large"></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Vaccination Certificate Details </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row rounded-lg" @onclick="@(() => NavigateToWalletAccount())">
            <MudIcon Icon="@Icons.Material.TwoTone.AccountCircle" Color="Color.Secondary" Class="mx-3 my-5 align-self-center" Size="Size.Large" ></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Account </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row rounded-lg" @onclick="@(() => NavigateToWalletSettings())">
            <MudIcon Icon="@Icons.Material.TwoTone.Settings" Color="Color.Warning" Class="mx-3 my-5 align-self-center" Size="Size.Large" ></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Settings </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>
</MudGrid>
}