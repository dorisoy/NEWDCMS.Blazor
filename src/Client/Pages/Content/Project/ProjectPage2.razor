@page "/project-project2"
@inject Microsoft.Extensions.Localization.IStringLocalizer<ProjectPage2> _localizer

@if (!_loaded)
{
    <Spinner></Spinner>
}
else
{
    <MudPaper Elevation="3" Height="150" Class="px-4 mx-n4 mt-n10 py-10 mud-theme-primary" Style="border-radius: 0px 0px 45px 45px;" Outlined="false">
        <MudPaper Elevation="0" Class="py-0">

        </MudPaper>
    </MudPaper>

    <MudCard Elevation="25" Class="mt-n10 rounded-xl">
        <MudCardContent Class="my-3 mx-1">
            <MudGrid Spacing="0">
                <MudItem xs="12">
                    <MudText Typo="Typo.h6" Style="font-weight: 700;" Color="Color.Default">Today Tasks</MudText>
                    <MudText Typo="Typo.caption">1/25 Task Completed </MudText>
                    <MudText Color="Color.Default" Class="mt-3" Typo="Typo.subtitle2">This project is to include the awesome task pack in Azures based on customer requests. We always listen to feedback and we love updating our work.</MudText>
                </MudItem>

                <MudItem xs="12" sm="12" md="12">
                    <MudDivider Class="my-3"></MudDivider>
                </MudItem>

                <MudItem xs="12" sm="12" md="12">
                    <MudAvatarGroup Max="@max" Spacing="@spacing" MaxColor="Color.Primary">
                        <MudAvatar Image="/images/pictures/faces/1s.png" />
                        <MudAvatar Image="/images/pictures/faces/2s.png" />
                        <MudAvatar Image="/images/pictures/faces/3s.png" />
                        <MudAvatar Image="/images/pictures/faces/4s.png" />
                    </MudAvatarGroup>
                </MudItem>

                <MudItem xs="12" sm="12" md="12">
                    <MudDivider Class="my-3"></MudDivider>
                </MudItem>

                <MudItem xs="12">
                    <MudText Typo="Typo.caption">Start Time 09:00, 15th June </MudText>
                </MudItem>

                <MudItem xs="12" sm="12" md="12">
                    <MudText Class="mt-10 mb-3" Typo="Typo.subtitle1" Style="font-weight: 600;" Align="Align.Left" Color="@Color.Default"> Pending</MudText>
                    <MudPaper Elevation="0" Class="d-flex flex-row" Style="background-color: transparent">
                        <MudCheckBox @bind-Checked="@Dense_CheckBox1" Dense="true" Class="mx-0 my-2 align-self-center" Color="Color.Success"></MudCheckBox>
                        <MudText Typo="Typo.subtitle2" Style="font-weight: 500;" Class="mx-3 align-self-center" Color="@Color.Default"> Clean Code </MudText>
                        <MudChip Class="ml-auto mr-0 align-self-center" Color="Color.Primary" Size="Size.Small">Your Task</MudChip>
                    </MudPaper>
                </MudItem>

                <MudItem xs="12" sm="12" md="12">
                    <MudPaper Elevation="0" Class="d-flex flex-row" Style="background-color: transparent">
                        <MudCheckBox @bind-Checked="@Dense_CheckBox2" Dense="true" Class="mx-0 my-2 align-self-center" Color="Color.Success"></MudCheckBox>
                        <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="mx-3 align-self-center" Color="@Color.Default"> Create Pages </MudText>
                        <MudChip Class="ml-auto mr-0 align-self-center" Color="Color.Warning" Size="Size.Small">Jack Sone</MudChip>
                    </MudPaper>
                </MudItem>

                <MudItem xs="12" sm="12" md="12">
                    <MudPaper Elevation="0" Class="d-flex flex-row" Style="background-color: transparent">
                        <MudCheckBox @bind-Checked="@Dense_CheckBox3" Dense="true" Class="mx-0 my-2 align-self-center" Color="Color.Success"></MudCheckBox>
                        <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="mx-3 align-self-center" Color="@Color.Default"> Connect To CMS </MudText>
                        <MudChip Class="ml-auto mr-0 align-self-center" Color="Color.Warning" Size="Size.Small">John Doe</MudChip>
                    </MudPaper>
                </MudItem>

                <MudItem xs="12" sm="12" md="12">
                    <MudDivider Class="my-5"></MudDivider>
                </MudItem>

                <MudItem xs="12" sm="12" md="12">
                    <MudText Class="mb-3" Typo="Typo.subtitle1" Style="font-weight: 600;" Align="Align.Left" Color="@Color.Default"> Completed</MudText>
                </MudItem>
                <MudItem xs="12" sm="12" md="12">
                    <MudPaper Elevation="0" Class="d-flex flex-row" Style="background-color: transparent">
                        <MudCheckBox @bind-Checked="@Dense_CheckBox4" Dense="true" Disabled="true" Class="mx-0 my-2 align-self-center" Color="Color.Success"></MudCheckBox>
                        <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="mx-3 align-self-center" Color="@Color.Default"> Wireframe </MudText>
                        <MudChip Class="ml-auto mr-0 align-self-center" Color="Color.Tertiary" Size="Size.Small">Approved</MudChip>
                    </MudPaper>
                </MudItem>

                <MudItem xs="12" sm="12" md="12">
                    <MudPaper Elevation="0" Class="d-flex flex-row" Style="background-color: transparent">
                        <MudCheckBox @bind-Checked="@Dense_CheckBox5" Dense="true" Disabled="true" Class="mx-0 my-2 align-self-center" Color="Color.Success"></MudCheckBox>
                        <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="mx-3 align-self-center" Color="@Color.Default"> Code Framework </MudText>
                        <MudChip Class="ml-auto mr-0 align-self-center" Color="Color.Tertiary" Size="Size.Small">Approved</MudChip>
                    </MudPaper>
                </MudItem>

                <MudItem xs="12" sm="12" md="12">
                    <MudPaper Elevation="0" Class="d-flex flex-row" Style="background-color: transparent">
                        <MudCheckBox @bind-Checked="@Dense_CheckBox6" Dense="true" Disabled="true" Class="mx-0 my-2 align-self-center" Color="Color.Success"></MudCheckBox>
                        <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="mx-3 align-self-center" Color="@Color.Default"> Install Prerequisites </MudText>
                        <MudChip Class="ml-auto mr-0 align-self-center" Color="Color.Tertiary" Size="Size.Small">Approved</MudChip>
                    </MudPaper>
                </MudItem>

                <MudItem xs="12" sm="12" md="12">
                    <MudPaper Elevation="0" Class="d-flex flex-row" Style="background-color: transparent">
                        <MudCheckBox @bind-Checked="@Dense_CheckBox7" Dense="true" Disabled="true" Class="mx-0 my-2 align-self-center" Color="Color.Success"></MudCheckBox>
                        <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="mx-3 align-self-center" Color="@Color.Default"> Develop Starter Page </MudText>
                        <MudChip Class="ml-auto mr-0 align-self-center" Color="Color.Tertiary" Size="Size.Small">Approved</MudChip>
                    </MudPaper>
                </MudItem>

                <MudItem xs="12" sm="12" md="12">
                    <MudDivider Class="my-5"></MudDivider>
                </MudItem>

                <MudItem xs="12" sm="12" md="12">
                    <MudText Class="mb-3" Typo="Typo.subtitle1" Style="font-weight: 600;" Align="Align.Left" Color="@Color.Default"> Canceled</MudText>
                </MudItem>
                <MudItem xs="12" sm="12" md="12">
                    <MudPaper Elevation="0" Class="d-flex flex-row" Style="background-color: transparent">
                        <MudIcon Icon="fas fa-times-circle" Color="Color.Error" Class="mx-0 my-2 align-self-center" Size="Size.Medium"></MudIcon>
                        <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="mx-3 align-self-center" Color="@Color.Default"> Create Pages </MudText>
                        <MudChip Class="ml-auto mr-0 align-self-center" Color="Color.Error" Size="Size.Small">By You</MudChip>
                    </MudPaper>
                </MudItem>

            </MudGrid>
        </MudCardContent>
    </MudCard>

    <div class="d-flex flex-row justify-space-between mt-10 mb-0">
        <MudText Color="Color.Default" Class="mx-3" Style="font-weight: 600;" Typo="Typo.subtitle1">Project Attachments</MudText>
        <MudText Color="Color.Primary" Class="ml-auto" Typo="Typo.subtitle2">View All</MudText>
    </div>
    <MudCard Elevation="25" Class="rounded-xl">
        <MudCardContent Class="my-3 mx-1">
            <MudGrid Spacing="1">
                <MudItem xs="12" sm="12" md="12">
                    <MudPaper Elevation="0" Class="d-flex flex-row" Style="background-color: transparent">
                        <MudIcon Icon="fas fa-file-archive" Color="Color.Primary" Class="mx-0 my-2 align-self-center" Size="Size.Large"></MudIcon>
                        <div class="mx-3 align-self-center">
                            <MudText Typo="Typo.subtitle1" Style="font-weight: 600;" Class="align-self-center" Color="@Color.Default"> Project Update. </MudText>
                            <MudText Typo="Typo.caption" Align="Align.Left" Color="@Color.Default">315Kb, ZIP Archive</MudText>
                        </div>
                        <MudIcon Icon="@Icons.Material.Outlined.FileDownload" Class="ml-auto mr-0 align-self-center" Color="Color.Default" Size="Size.Small">Approved</MudIcon>
                    </MudPaper>
                </MudItem>

                <MudItem xs="12" sm="12" md="12">
                    <MudPaper Elevation="0" Class="d-flex flex-row" Style="background-color: transparent">
                        <MudIcon Icon="fas fa-file-pdf" Color="Color.Error" Class="mx-0 my-2 align-self-center" Size="Size.Large"></MudIcon>
                        <div class="mx-3 align-self-center">
                            <MudText Typo="Typo.subtitle1" Style="font-weight: 600;" Class="align-self-center" Color="@Color.Default"> Customer Briefing. </MudText>
                            <MudText Typo="Typo.caption" Align="Align.Left" Color="@Color.Default">315Kb, ZIP Archive</MudText>
                        </div>
                        <MudIcon Icon="@Icons.Material.Outlined.FileDownload" Class="ml-auto mr-0 align-self-center" Color="Color.Default" Size="Size.Small">Approved</MudIcon>
                    </MudPaper>
                </MudItem>

                <MudItem xs="12" sm="12" md="12">
                    <MudPaper Elevation="0" Class="d-flex flex-row" Style="background-color: transparent">
                        <MudIcon Icon="fas fa-file-alt" Color="Color.Default" Class="mx-0 my-2 align-self-center" Size="Size.Large"></MudIcon>
                        <div class="mx-3 align-self-center">
                            <MudText Typo="Typo.subtitle1" Style="font-weight: 600;" Class="align-self-center" Color="@Color.Default"> Product Licenses </MudText>
                            <MudText Typo="Typo.caption" Align="Align.Left" Color="@Color.Default">315Kb, ZIP Archive</MudText>
                        </div>
                        <MudIcon Icon="@Icons.Material.Outlined.FileDownload" Class="ml-auto mr-0 align-self-center" Color="Color.Default" Size="Size.Small">Approved</MudIcon>
                    </MudPaper>
                </MudItem>

                <MudItem xs="12" sm="12" md="12">
                    <MudPaper Elevation="0" Class="d-flex flex-row" Style="background-color: transparent">
                        <MudIcon Icon="fas fa-file-image" Color="Color.Tertiary" Class="mx-0 my-2 align-self-center" Size="Size.Large"></MudIcon>
                        <div class="mx-3 align-self-center">
                            <MudText Typo="Typo.subtitle1" Style="font-weight: 600;" Class="align-self-center" Color="@Color.Default"> Design Screenshots. </MudText>
                            <MudText Typo="Typo.caption" Align="Align.Left" Color="@Color.Default">315Kb, ZIP Archive</MudText>
                        </div>
                        <MudIcon Icon="@Icons.Material.Outlined.FileDownload" Class="ml-auto mr-0 align-self-center" Color="Color.Default" Size="Size.Small">Approved</MudIcon>
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>
}