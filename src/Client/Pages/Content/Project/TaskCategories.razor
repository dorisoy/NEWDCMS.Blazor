@page "/project-task-categories"
@inject Microsoft.Extensions.Localization.IStringLocalizer<TaskCategories> _localizer

@if (!_loaded)
{
    <Spinner></Spinner>
}
else
{
    <MudPaper Elevation="3" Height="150" Class="px-4 mx-n4 mt-n10 pt-10 mud-theme-primary" Style="border-radius: 0px 0px 45px 45px;" Outlined="false">
        <MudPaper Elevation="0" Class="py-6" Style="background-color: transparent">

        </MudPaper>
    </MudPaper>

    <MudGrid Class="mt-n15 pt-0 mb-1" Spacing="2">
        <MudItem xs="6" sm="6" md="6">
            <MudCard Elevation="25" Class="rounded-xl">
                <MudCardContent Class="d-flex flex-column align-self-center flex-wrap px-3 py-2" Style="height:170px;">
                    <MudIconButton Icon="@Icons.Material.TwoTone.CalendarViewDay" Color="Color.Secondary" Class="pa-3 align-self-center" Size="Size.Large"></MudIconButton>
                    <MudText Typo="Typo.h6" Style="font-weight: 600;" Class="align-self-center" Color="@Color.Surface">Upcoming</MudText>
                    <MudText Typo="Typo.caption" Style="font-weight: 300;" Color="@Color.Primary" Class="align-self-center">Task Coming Soon </MudText>
                    <MudText Typo="Typo.caption" Style="font-weight: 300;" Class="mt-auto align-self-center mud-text-secondary" Color="@Color.Default">Tap to view </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="6" sm="6" md="6">
            <MudCard Elevation="25" Class="rounded-xl">
                <MudCardContent Class="d-flex flex-column align-self-center flex-wrap px-3 py-2" Style="height: 170px;">
                    <MudIconButton Icon="@Icons.Material.TwoTone.VerifiedUser" Color="Color.Primary" Class="pa-3 align-self-center" Size="Size.Large"></MudIconButton>
                    <MudText Typo="Typo.h6" Style="font-weight: 600;" Class="align-self-center" Color="@Color.Surface">Assigned</MudText>
                    <MudText Typo="Typo.caption" Style="font-weight: 300;" Color="@Color.Primary" Class="align-self-center">Task Assigned to You </MudText>
                    <MudText Typo="Typo.caption" Style="font-weight: 300;" Class="mt-auto align-self-center mud-text-secondary" Color="@Color.Default">Tap to view </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="6" sm="6" md="6">
            <MudCard Elevation="25" Class=" rounded-xl">
                <MudCardContent Class="d-flex flex-column align-self-center flex-wrap px-3 py-2" Style="height: 170px;">
                    <MudIconButton Icon="@Icons.Material.TwoTone.Flag" Color="Color.Warning" Class="pa-3 align-self-center" Size="Size.Large"></MudIconButton>
                    <MudText Typo="Typo.h6" Style="font-weight: 600;" Class="align-self-center" Color="@Color.Surface">Priority</MudText>
                    <MudText Typo="Typo.caption" Style="font-weight: 300;" Color="@Color.Primary" Class="align-self-center">Require Attention </MudText>
                    <MudText Typo="Typo.caption" Style="font-weight: 300;" Class="mt-auto align-self-center mud-text-secondary" Color="@Color.Default">Tap to view </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="6" sm="6" md="6">
            <MudCard Elevation="25" Class="rounded-xl">
                <MudCardContent Class="d-flex flex-column align-self-center flex-wrap px-3 py-2" Style="height: 170px;">
                    <MudIconButton Icon="@Icons.Material.TwoTone.Settings" Color="Color.Error" Class="pa-3 align-self-center" Size="Size.Large"></MudIconButton>
                    <MudText Typo="Typo.h6" Style="font-weight: 600;" Class="align-self-center" Color="@Color.Surface">Settings</MudText>
                    <MudText Typo="Typo.caption" Style="font-weight: 300;" Color="@Color.Primary" Class="align-self-center">Your Project Settings </MudText>
                    <MudText Typo="Typo.caption" Style="font-weight: 300;" Class="mt-auto align-self-center mud-text-secondary" Color="@Color.Default">Tap to view </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="12" md="12">
            <MudCard Elevation="25" Class="d-flex flex-row rounded-xl" Style="height:100px;">
                <MudIconButton Icon="fas fa-comment-alt" Color="Color.Error" Class="ma-3 pa-3" Size="Size.Medium" ></MudIconButton>
                <MudPaper Elevation="0" Class="pa-0 align-self-center">
                    <MudText Typo="Typo.h6" Style="font-weight: 600;" Color="@Color.Default">Team Chat</MudText>
                    <MudText Typo="Typo.caption" Style="font-weight: 300;" Color="@Color.Primary" Class="mud-text-primary">Project Chats and Attachments </MudText>
                </MudPaper>
                <MudPaper Elevation="0" Class="pa-0 mr-2 ml-auto align-self-center">
                </MudPaper>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="12" md="12">
            <MudCard Elevation="25" Class="d-flex rounded-xl" Style="height:100px;">
                <MudIconButton Icon="fas fa-box-open" Color="Color.Primary" Class="ma-3 pa-3" Size="Size.Medium" ></MudIconButton>
                <MudPaper Elevation="0" Class="pa-0 align-self-center">
                    <MudText Typo="Typo.h6" Style="font-weight: 600;" Color="@Color.Default">Others</MudText>
                    <MudText Typo="Typo.caption" Style="font-weight: 300;" Color="@Color.Primary" Class="mud-text-primary">Other non-defined type</MudText>
                </MudPaper>
                <MudPaper Elevation="0" Class="pa-0 mr-2 ml-auto align-self-center">
                </MudPaper>
            </MudCard>
        </MudItem>
    </MudGrid>
}