                <MudText Typo="Typo.subtitle1" Style="font-weight: 600;">03/2025</MudText>
            </div>
        </MudPaper>
    </MudCardContent>
</MudCard>

<MudCard Elevation="25" Class="mud-theme-secondary rounded-xl">
    <MudCardContent Class="d-flex flex-column justify-space-around" Style="height: 210px;">
        <div>
            <MudIcon Icon="@Icons.Material.TwoTone.CardGiftcard"  Class="mx-2 justify-self-center mud-text-secondary" Size="Size.Large"></MudIcon>
            <MudText Typo="Typo.h6" Style="font-weight: 800;">GIFT CARD</MudText>
            <MudText Typo="Typo.subtitle2" Style="font-weight: 700;" Class="mud-text-secondary">AVAILABLE IN DCMS.BlazorS</MudText>
        </div>
        <MudText Typo="Typo.h5" Align="Align.Right" Style="font-weight: 600;">$50.00</MudText>
    </MudCardContent>
</MudCard>

<MudCard Elevation="25" Class="my-7 card-style mud-theme-primary">
    <MudCardContent Class="d-flex flex-column justify-space-around card-style-3" Style="height: 230px;">
        <MudPaper Elevation="0" Class="d-flex justify-space-between" Style="background-color: transparent">
