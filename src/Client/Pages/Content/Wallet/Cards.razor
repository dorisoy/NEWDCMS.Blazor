<MudCard Elevation="25" Class="my-7 card-style">
    <MudCardContent Class="d-flex flex-column justify-space-between card-style-4" Style="height: 230px;">
        <MudText Typo="Typo.h6" Style="font-weight: 800;">GOLD MEMBER</MudText>
        <div>
            <MudText Typo="Typo.caption" Class="mud-text-secondary" Style="font-weight: 500;">MEMBER ID</MudText>
            <MudText Typo="Typo.h6" Style="font-weight: 700;" Class="mud-text-secondary">1234567890123456</MudText>
        </div>
        <MudPaper Elevation="0" Class="d-flex justify-space-between" Style="background-color: transparent">
            <div>
                <MudText Typo="Typo.caption" Class="mud-text-secondary" Style="font-weight: 600;">MEMBER NAME</MudText>
                <MudText Typo="Typo.subtitle1" Style="font-weight: 600;">JOHN DOE</MudText>
            </div>
            <div>
                <MudText Typo="Typo.caption"  Class="mud-text-secondary" Style="font-weight: 600;">DATE JOIN</MudText>
